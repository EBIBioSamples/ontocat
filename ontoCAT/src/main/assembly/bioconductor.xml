<assembly>
    <id>bioconductor</id>
    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>

              <outputDirectory>/</outputDirectory>
              <useProjectArtifact>true</useProjectArtifact>
              <unpack>true</unpack>
              <unpackOptions>

                  <excludes>
                      <exclude>*.aut</exclude>
                      <exclude>**/*.txt</exclude>
                      <exclude>**/*.xml</exclude>
                      <exclude>*:sources</exclude>
                      <exclude>**/META-INF/**</exclude>
                      <exclude>**/uk/ac/ebi/efo/**</exclude>
                      <exclude>**/uk/ac/ebi/ontocat/bioportal/**</exclude>
                      <exclude>**/uk/ac/ebi/ontocat/conceptwiki/**</exclude>
                      <exclude>**/uk/ac/ebi/ontocat/examples/**</exclude>
                      <exclude>**/uk/ac/ebi/ontocat/mediawiki/**</exclude>
                      <exclude>**/uk/ac/ebi/ontocat/ols/**</exclude>
                      <exclude>**/dk/**</exclude>
                      <exclude>**/gnu/**</exclude>

                      <exclude>**/debugging*/**</exclude>
                      <exclude>**/examples/**</exclude>
                      <exclude>**/org/slf4j/**</exclude>
                      <exclude>**/com/**</exclude>
                  </excludes>
                  <filtered>true</filtered>
              </unpackOptions>
              <scope>runtime</scope>
              <excludes>
                        <exclude>net.sf.ehcache:ehcache-core</exclude>
                        <exclude>jargs:jargs</exclude>
                        <exclude>xpp3:xpp3_min</exclude>
                        <exclude>opencsv:opencsv</exclude>
                        <exclude>ols:ols-client</exclude>
                        <exclude>axis:axis</exclude>
                        <exclude>jaxrpc:jaxrpc</exclude>
                        <exclude>commons-logging:commons-logging</exclude>
                        <exclude>commons-discovery:commons-discovery</exclude>
                        <exclude>commons-lang:commons-lang</exclude>
                        <exclude>commons-validator:commons-validator</exclude>
                        <exclude>xstream:xstream</exclude>
                        <exclude>jetty:org.mortbay.jetty</exclude>
                      </excludes>

        </dependencySet>
    </dependencySets>
</assembly>
